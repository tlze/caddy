{ 
  "admin": {"disabled": true},
  "logging": {
    "sink": {"writer": {"output": "stdout"}},
    "logs": {"default": {"writer": {"output": "stdout"}}}
  },
  "apps": {
    "http": {
      "servers": {
        "srv0": {
          "listen": [":443"],
          "routes": [{
            "handle": [{
              "handler": "forward_proxy",
              "hide_ip": true,
              "hide_via": true,
              "auth_user": "user_name",   
              "auth_pass": "your_password",   
              "probe_resistance": {"domain": "www.live.com:443"}
            }]
          }, {
            "match": [{"host": ["your_domain.com"]}],
            "handle": [{
              "handler": "file_server",
              "root": "/var/www/html"
            }],
            "terminal": true
          }],
          "tls_connection_policies": [{
            "match": {"sni": ["your_domain.com"]}
          }]
        }
      }
    },
    "tls": {
      "automation": {
        "policies": [{
          "subjects": ["your_domain.com"],
          "issuer": {
            "module": "acme",
            "email": "your@email.com"
          }
        }]
      }
    }
  }
}
